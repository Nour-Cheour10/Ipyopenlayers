{
  "files": [],
  "include": ["src/**/*.js"], // Inclut tous les fichiers JavaScript dans le répertoire src et ses sous-répertoires
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
